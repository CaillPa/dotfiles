set nocompatible

syntax on

colorscheme jellybeans

set background=dark

set autoindent

set expandtab
set smarttab
set shiftwidth=4
set tabstop=4

nnoremap <C-J> <C-W><C-J>
nnoremap <C-K> <C-W><C-K>
nnoremap <C-L> <C-W><C-L>
nnoremap <C-H> <C-W><C-H>

set splitbelow
set splitright

set number
set relativenumber
